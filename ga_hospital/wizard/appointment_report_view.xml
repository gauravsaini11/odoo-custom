<?xml version="1.0"?>
<odoo>

    <record id="view_report_appointment_form_custom" model="ir.ui.view">
        <field name="name">appointment.report.wizard.form.custom</field>
        <field name="model">appointment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Appointments">
                <group>
                    <group>
                        <field name="patient_id"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print PDF" class="btn-primary"/>
                    <button name="action_print_excel_report" type="object" string="Print Excel" class="btn-primary"/>
                    <button string="Cancel" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_appointment_new" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">appointment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_appointment_form_custom"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_reporting"
              name="Reporting"
              parent="menu_hospital_root"
              sequence="40"/>

    <menuitem id="hospital_appointment_report_custom"
              name="Appointments Custom"
              parent="menu_reporting"
              action="action_report_appointment_new"
              sequence="10"/>

    <menuitem id="hospital_patient_report_custom"
              name="Patient Custom"
              parent="menu_reporting"
              action="action_report_patient"
              sequence="10"/>

</odoo>
