<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equipment_inherit" model="ir.ui.view">
        <field name="name">equipment.form.inherit</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button string="Create Task" name="action_equipment_new" type="object" class="oe_highlight"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_equipment" type="object"
                        class="oe_stat_button" icon="fa-star">
                    <div class="o_stat_info">
                        <field name="equipment_count" class="o_stat_value"/>
                        <span class="o_stat_text">Task</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
