<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="fish_qc_list">
      <field name="name">fish.qc.list</field>
      <field name="model">fish.qc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="number"/>
          <field name="user_id"/>
          <field name="create_date"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fish_qc_form_new">
      <field name="name">fish.qc.form</field>
      <field name="model">fish.qc</field>
      <field name="arch" type="xml">
        <form>
          <header>
          </header>
          <sheet>
            <div class="oe_title">
                <h1>
                  <field name="number" placeholder="Number"/>
                </h1>
            </div>
            <group>
              <group>
                  <field name="user_id"/>
                  <field name="create_date"/>
                  <field name="reviewer_id"/>
              </group>
              <group>
                  <field name="review_date"/>
                  <field name="review_stage"/>
              </group>
            </group>
            <group>
              <group>
                  <field name="receiving_id"/>
                  <field name="materials_type"/>
                  <field name="sample_weight"/>
                  <field name="percentage"/>
                  <field name="photos"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="action_fish_qc">
      <field name="name">QC</field>
      <field name="res_model">fish.qc</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="fish_qc_list"/>
    </record>

    <!-- Sub Menu -->
    <menuitem name="QC" 
      id="menu_fish_qc" 
      parent="menu_root_fish_management"
      action="action_fish_qc"/>

  </data>
</odoo>