<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_order_details_custom">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h2>Order Details</h2>
                    </div>
                    <table>
                        <tr>
                            <td>Product</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('product_id')">
                                    <t t-esc="form_data['product_id'][1]"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Date From</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('date_from')">
                                    <t t-esc="form_data['date_from']"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Date To</td>
                            <td>:</td>
                            <td>
                                <t t-if="form_data.get('date_to')">
                                    <t t-esc="form_data['date_to']"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <table class="table table-bordered mt32">
                        <thead>
                            <tr>
                                <th name="th_reference" class="text-left">
                                    <span>Reference</span>
                                </th>
                                <th name="th_desc" class="text-left">
                                    <span>Description</span>
                                </th>
                                <th name="th_price" class="text-left">
                                    <span>Price</span>
                                </th>
                            </tr>
                        </thead>

                        <t t-foreach="orders" t-as="line">

                            <tr>
                                <td>
                                    <span t-esc="line['name']"/>
                                </td>
                                <td>
                                    <span t-esc="line['note']"/>
                                </td>
                                <td>
                                    <span t-esc="line['price']"/>
                                </td>
                            </tr>
                        </t>

                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>