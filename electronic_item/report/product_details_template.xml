<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_product_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-8">
                                <table class="table table-condensed" style="border: 3px solid black !important;">
                                    <tr>
                                        <td width="40%">
                                            <p style="text-align:center;padding-top:10px;">
                                                <img t-if="not o .image" t-att-src="'/web/static/src/placeholder.png'" height="140" border="1" width="120"/>
                                                <img t-if="o.image" t-att-src="'data:image/png;base64,%s' % to_text(o.image)" height="140" border="1" width="120"/>
                                            </p>
                                        </td>
                                        <td width="60%">
                                            <table>
                                                <tr>
                                                    <td colspan="3" class="text-center">
                                                        <span t-field="o.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Reference</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.reference"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Item</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.item"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Price</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.price"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>

                        <t t-if="o.order_ids">
                            <span>Order Details</span>
                            <table class="table table-sm o_main_table" name="product">
                                <thead>
                                    <tr>
                                        <th name="th_reference" class="text-left">
                                            <span>Reference</span>
                                        </th>
                                        <th name="th_price" class="text-left">
                                            <span>Price</span>
                                        </th>
                                        <th name="th_item" class="text-left">
                                            <span>Item</span>
                                        </th>
                                        <th name="th_date_order" class="text-left">
                                            <span>Date Order</span>
                                        </th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.order_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price"/>
                                        </td>
                                        <td>
                                            <span t-field="line.item"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date_order"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </t>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
