<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Create Kanban view -->
    <record id="view_order_kanban" model="ir.ui.view">
            <field name="name">electronic.order.kanban</field>
            <field name="model">electronic.order</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="item"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <ul>
                                        <li>
                                            Name: <field name="name"/>
                                        </li>
                                        <li>
                                            Age: <field name="price"/>
                                        </li>
                                        <li>
                                            Gender: <field name="item"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
    </record>

    <!-- create tree view -->
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">electronic.order.tree</field>
        <field name="model">electronic.order</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name"/>
                <field name="product_id"/>
                <field name="price" optional="show"/>
                <field name="item" optional="show"/>
                <field name="date_order" optional="show"/>
                <field name="note" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- create form view -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">electronic.order.form</field>
        <field name="model">electronic.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="item"/>
                        </group>
                        <group>
                            <field name="price" readonly="1" force_save="1"/>
                            <field name="date_order"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter box -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_order_search" model="ir.ui.view">
        <field name="name">electronic.order.search</field>
        <field name="model">electronic.order</field>
        <field name="arch" type="xml">
            <search string="Product">
                <field name="name"/>
                <field name="product_id"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Product" name="product_id" context="{'group_by': 'product_id'}"/>
                </group>
                <searchpanel>
                    <field name="item" string="Item" icon="fa-exchange"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Acton Model -->
    <record id="action_electronic_order" model="ir.actions.act_window">
        <field name="name">Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">electronic.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Order!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_order_root"
              name="Order"
              parent="menu_electronic_root"
              sequence="20"/>
    <menuitem id="Electronic_order"
              name="Order"
              parent="menu_order_root"
              action="action_electronic_order"
              sequence="10"/>
    <menuitem id="Create_order"
              name="Create Order"
              parent="menu_order_root"
              action="action_create_order"
              sequence="20"/>

</odoo>