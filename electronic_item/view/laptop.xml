<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acton Model -->
    <record id="action_laptop_product" model="ir.actions.act_window">
        <field name="name">Laptop Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">electronic.product</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_item': 'laptop','default_note' : 'New Electronic Product', 'hide_item' : 1}</field>
        <field name="domain">[('item', '=', 'laptop')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Laptop Product !
            </p>
        </field>
    </record>


    <!-- Menu Item -->
    <menuitem id="menu_laptop"
              name="laptop"
              parent="menu_product_root"
              action="action_laptop_product"
              sequence="20"/>

