<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="add_purchase_order_button_mrp_production_form_view"
		model="ir.ui.view">
		<field name="name">add.purchase.order.button_mrp.production.form.view
		</field>
		<field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.mrp_production_form_view" />
		<field name="arch" type="xml">
			<header>
				<button name="%(action_create_po_from_manufacturing_vts)d"
					string="Create Purchase Order" type="action" class="btn-primary"
					attrs="{'invisible':[('state','in',['progress','done','cancel'])]}" />
			</header>
			<xpath expr="//sheet/div" position="inside">
				<button name="action_view_purchase_order" type="object"
					class="oe_stat_button" icon="fa-bars"
					attrs="{'invisible':[('purchase_ids','=',[])]}">
					<field name="purchase_count" widget="statinfo" string="Purchase Order" />
					<field name="purchase_ids" invisible="1" />
				</button>
			</xpath>
		</field>
	</record>
</odoo>
