<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="create_po_from_manufacture_order_form_view"
		model="ir.ui.view">
		<field name="name">create.po.from.manufacture.order.form.view
		</field>
		<field name="model">create.po.from.mo</field>
		<field name="arch" type="xml">
			<form string="Manufacturing Order">
				<p class="oe_grey">
				</p>
				<group>
					<group>
						<field name="partner_id" domain="[('supplier','=',True)]" />
						<field name="currency_id" />
					</group>
					<group>
						<field name="company_id" />
						<field name="date_order" />
						<field name="payment_term" />
					</group>
				</group>
				<group>
					<field name="raw_material_line_ids" nolabel="1">
						<tree editable="botttom" create='false'>
							<field name="product_id" />
							<field name="name" />
							<field name="product_qty" />
							<field name="product_uom" groups="product.group_uom" class="oe_inline" />
							<field name="price_unit" />
						</tree>
					</field>
				</group>
				<footer>
					<button name="action_create_po_from_mo"
						string="Create Purchase Order" type="object" class="btn-primary" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
	<record id="action_create_po_from_manufacturing_vts"
		model="ir.actions.act_window">
		<field name="name">Create Purchase Order from Manufacturing</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">create.po.from.mo</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>