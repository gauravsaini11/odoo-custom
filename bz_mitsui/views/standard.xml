<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create tree view -->
    <record id="view_standard_tree" model="ir.ui.view">
        <field name="name">standards.tree</field>
        <field name="model">standards</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- create form view -->
     <record id="view_standard_form" model="ir.ui.view">
        <field name="name">standards.form</field>
        <field name="model">standards</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acton Model -->
    <record id="action_standard" model="ir.actions.act_window">
        <field name="name">Standard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">standards</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_patient_name':1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Standard
            </p>
        </field>
    </record>

    <!-- Menu Item -->

    <menuitem id="standard"
              name="Standard"
              parent="project.menu_project_config"
              action="action_standard"
              sequence="10"/>
</odoo>