<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <!-- create tree view -->
    <record id="view_protocol_form_tree" model="ir.ui.view">
        <field name="name">protocol.tree</field>
        <field name="model">protocol.form</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <field name="process_type_id"/>
                <field name="standard_id"/>
            </tree>
        </field>
    </record>

    <!-- create form view -->
    <record id="view_protocol_form_view" model="ir.ui.view">
        <field name="name">protocol.form</field>
        <field name="model">protocol.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <group>
                            <field name="process_type_id"/>
                            <field name="standard_id"/>
                        </group>
                        <group>
                            <h4>Environmental Condition</h4>
                            <field name="ambient_temperature"/>
                            <field name="humidity"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Other Info" name="other_info1">
                            <field name="parameter_ids">
                                <tree editable="bottom">
                                    <field name="parameter_id"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page name="equipment_details" string="Equipment Details">
<!--                            <form string="Equipment List">-->
                                <sheet>
                                    <field name="equipment_list_ids">
                                        <tree editable="bottom">
                                            <field name="equipment_name"/>
                                            <field name="equipment_id"/>
                                            <field name="calibration_due_date"/>
                                        </tree>
                                    </field>
                                </sheet>
<!--                            </form>-->
                        </page>

                        <page string="Remarks" name="remarks">
                            <group>
                                <field name="remarks"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter box -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

