    <!-- Acton Model -->
    <record id="action_protocol" model="ir.actions.act_window">
        <field name="name">Protocol</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">protocol.form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_patient_name':1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Protocol From!
            </p>
        </field>
    </record>

    <!-- Menu Item -->

    <menuitem id="protocol"
