<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create tree view -->
    <record id="view_abbreviations_tree" model="ir.ui.view">
        <field name="name">abbreviations.tree</field>
        <field name="model">abbreviations</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <field name="mcind"/>
                <field name="mitsui_chemicals"/>
            </tree>
        </field>
    </record>

    <!-- create form view -->
     <record id="view_abbreviations_form" model="ir.ui.view">
        <field name="name">abbreviations.form</field>
        <field name="model">abbreviations</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="mcind"/>
                            <field name="mitsui_chemicals"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acton Model -->
    <record id="action_abbreviations" model="ir.actions.act_window">
        <field name="name">Abbreviations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">abbreviations</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_patient_name':1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Abbreviations
            </p>
        </field>
    </record>

    <!-- Menu Item -->

    <menuitem id="abbreviations"
              name="Abbreviations"
              parent="project.menu_project_config"
              action="action_abbreviations"
              sequence="10"/>
</odoo>