<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_scope_pdf1">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <table class="table table-sm table-bordered" style="border: 1px solid #000; font-family:Calibri (Body);">
                            <tr>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Samples</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Test Description</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Time (hrs) per one module</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Frequency</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>System Voltage</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Total time</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Equipment, Software required</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Manpower required</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Remarks</span></strong>
                                </td>
                                <td class="text-left" style="background-color:#eee;border: 1px solid #000;">
                                    <strong><span>Sub-contracting required</span></strong>
                                </td>
                            </tr>
                            <t t-foreach="o.batch_scope_matrix_ids" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.test_description"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.time"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.frequency"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.total_time"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.equipment_software_required"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.manpower_required"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.remarks"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-field="line.sub_contracting_required"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <table class="table table-sm table-bordered " style="border: 1px solid #000; font-family:Calibri (Body);">
                            <tr>
                                <td style="border: 1px solid #000; background-color:#eee;">
                                    <strong>Duration in days</strong>
                                </td>
                                <td style="border: 1px solid #000;"><span t-esc="o.duration_in_days"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #000; background-color:#eee;">
                                    <strong>Buffer time</strong>
                                </td>
                                <td style="border: 1px solid #000;"><span t-esc="o.buffer_time"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #000; background-color:#eee;">
                                    <strong>Compiling data, Results Interpretation of results </strong>
                                </td>
                                <td style="border: 1px solid #000;"><span t-esc="o.compiling_data_results_interpretation_of_results"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #000; background-color:#eee;">
                                    <strong>Preparation of Report</strong>
                                </td>
                                <td style="border: 1px solid #000;"><span t-esc="o.preparation_of_report"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #000; background-color:#eee;">
                                    <strong>Total Project Time ( in hrs.and days)</strong>
                                </td>
                                <td style="border: 1px solid #000;"><span t-esc="o.total_project_time"/></td>
                            </tr>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>