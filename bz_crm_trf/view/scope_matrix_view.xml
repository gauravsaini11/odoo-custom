<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create tree view -->
    <record id="view_scope_matrix_tree" model="ir.ui.view">
        <field name="name">scope.matrix.tree</field>
        <field name="model">scope.matrix</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <field name="sequence"/>
                <field name="date_requested"/>
                <field name="assign_user"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- create form view -->
    <record id="view_scope_matrix_view" model="ir.ui.view">
        <field name="name">scope.matrix.form</field>
        <field name="model">scope.matrix</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_requested" name="action_requested" string="Requested" class="btn-primary"
                            states="draft" type="object"/>
                    <button id="button_approved" name="action_approved" string="Approved" class="btn-primary"
                            states="requested" type="object"/>
                    <button id="sale_quotations_new_scope_matrix" name="action_sale_quotations_new"
                            string="New Quotation" class="btn-primary"
                            states="approved" type="object"/>
                    <button id="button_done" name="action_done" string="Done" class="btn-primary" states="approved"
                            type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" class="btn-primary"
                            states="draft,requested,approved"
                            type="object" confirm="Are you sure that you need to cancel ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,requested,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_sale_view" type="object"
                                class="oe_stat_button" icon="fa-pencil-square-o">
                            <div class="o_stat_info">
                                <field name="quotation_count" class="o_stat_value"/>
                                <span class="o_stat_text" attrs="{'invisible': [('quotation_count', '&lt;', 2)]}">
                                    Quotation
                                </span>
                                <span class="o_stat_text" attrs="{'invisible': [('quotation_count', '&gt;', 1)]}">
                                    Quotations
                                </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_requested"/>
                            <field name="assign_user"/>
                        </group>
                        <group>
                            <field name="requested_user"/>
                            <field name="trf_reference" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Batch Scope Matrix" name="batch_scope_matrix">
                            <field name="batch_scope_matrix_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="time"/>
                                    <field name="frequency"/>
                                    <field name="total_time"/>
                                    <!--<field name="duration_in_days"/>-->
                                    <field name="equipment_software_required"/>
                                    <field name="manpower_required"/>
                                </tree>
                                <form create="0" edit="0">
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="time"/>
                                            <!--<field name="duration_in_days"/>-->
                                            <field name="equipment_software_required" widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="sub_contracting_required"/>
                                            <field name="test_description"/>
                                            <field name="frequency"/>
                                            <field name="total_time"/>
                                            <field name="manpower_required" widget="many2many_tags"/>
                                        </group>
                                        <field name="remarks" placeholder="Remark"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Note" name="note">
                            <group>
                                <field name="note"/>
                            </group>
                        </page>
                    </notebook>
                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                        <!--<group colspan="4">
                            <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                        </group>-->
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="duration_in_days" widget='monetary'/>
                            <field name="buffer_time" widget='monetary'/>
                            <field name="compiling_data_results_interpretation_of_results" widget='monetary'/>
                            <field name="preparation_of_report" widget='monetary'/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_project_time"/>
                            </div>
                            <field name="total_project_time" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>

                </sheet>
                <!-- Chatter box -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view-->
    <record id="view_scope_matrix_search" model="ir.ui.view">
        <field name="name">scope.matrix.search</field>
        <field name="model">scope.matrix</field>
        <field name="arch" type="xml">
            <search string="Scope Matrix Search">
                <field name="assign_user"/>
                <!--                <field name="reference"/>-->
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Requested" name="requested" domain="[('state','=','requested')]"/>
                <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Group By">
                    <filter string="Assign User" name="assign_user" domain="[]" context="{'group_by':'assign_user'}"/>
                    <filter string="Requested User" name="requested_user" domain="[]"
                            context="{'group_by':'requested_user'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- Acton Model -->
    <record id="action_scope_matrix" model="ir.actions.act_window">
        <field name="name">Scope Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scope.matrix</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_patient_name':1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                scope matrix From!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scope_matrix_root"
              name="Scope Matrix"
              web_icon="bz_crm_trf,static/description/scope_matrix.jpeg"
              sequence="10"/>

    <menuitem id="menu_scope_matrix_form_root"
              name="Scope Matrix"
              parent="menu_scope_matrix_root"
              sequence="10"/>
    <menuitem id="scope_matrix"
              name="Scope Matrix"
              parent="menu_scope_matrix_form_root"
              action="action_scope_matrix"
              sequence="10"/>
</odoo>