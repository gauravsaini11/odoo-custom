 -->
        </field>
    </record>

    <record id="project_form_inherit" model="ir.ui.view">
        <field name="name">project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="project_type"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_reject" type="object" string="Reject" class="oe_highlight"/>
            </xpath>
             <xpath expr="//div[@name='button_box']" position="inside">
                <button  class="oe_stat_button" name="action_sample_view" type="object" icon="fa-file-text-o" string="Sample">
                </button>
                <button  class="oe_stat_button" name="action_trf_view" type="object" icon="fa-file-text-o" string="TRF">
                </button>
            </xpath>
        </field>
    </record>
</odoo>