            <xpath expr="//header" position="inside">
<!--                <button string="Create Protocol" name="action_protocol_form_new" type="object" class="oe_highlight"/>-->
                <button string="Sample In" name="action_samplein" type="object" class="oe_highlight"/>
                <button string="Sample Out" name="action_samplein" type="object" class="oe_highlight"/>
            </xpath>
             <!--<xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_protocol_view" type="object"
                    class="oe_stat_button" icon="fa-star">
                    <div class="o_stat_info">
                        <field name="protocol_count" class="o_stat_value"/>
                        <span class="o_stat_text"> PROTOCOL</span>
                    </div>
                </button>
            </xpath> -->
            <!-- <xpath expr="//field[@name='partner_id']" position="after">
                <field name="equipment_id"/>
