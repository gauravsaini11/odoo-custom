<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Test Request" name="action_trf_form_new" type="object" class="oe_highlight"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_trf_view" type="object"
                        class="oe_stat_button" icon="fa-calendar">
                    <div class="o_stat_info">
                        <field name="trf_count" class="o_stat_value"/>
                        <span class="o_stat_text" attrs="{'invisible': [('trf_count', '&lt;', 2)]}">TRFs
                        </span>
                        <span class="o_stat_text" attrs="{'invisible': [('trf_count', '&gt;', 1)]}">TRF
                        </span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>
</odoo>