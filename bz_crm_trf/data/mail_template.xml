<?xml version="1.0"?>
<odoo>
		<!-- Notification Email template -->
		<record id="goahead_approval_request" model="mail.template">
			<field name="name">Goahead Approval Request </field>
			<field name="email_from">${(object.company_id.email and '%s &lt;%s&gt;' % (object.company_id.name, object.company_id.email) or '')|safe}</field>
			<field name="subject">Goahead</field>
			<field name="model_id" ref="bz_crm_trf.model_purchase_indent"/>
			<field name="auto_delete" eval="True"/>
			<field name="body_html"><![CDATA[

			   <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 14px; color: rgb(34, 34, 34); background-color: #FFF;">
				<p>Hello,</p>
				<p>The below Purchase Indent Required you approval. </p>

				<br/><br/><br/>
				% set setup_url = object.make_url()
				<a href="${setup_url}" style="background-color: #1abc9c;padding: 20px;text-decoration: none;color: #fff;border-radius: 5px;font-size: 16px;" class="o_default_snippet_text">Click here to view Purchase Indent</a>
					<br/><br/>
				   </div>
				]]></field>
		 </record>

</odoo>