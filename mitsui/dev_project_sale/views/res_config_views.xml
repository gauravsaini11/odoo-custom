<odoo>
    <record id="view_dev_res_config_default_stage_form" model="ir.ui.view">
        <field name="name">view.dev.res.config.default.stage.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']//h2" position="before">
            	<h2>Project Default Stages</h2>
            	<div class="row mt16 o_settings_container" id="project_default_stages">
			        <div class="col-xs-12 o_setting_box">
			            <group>
			                <field name="project_stage_ids" style="width:80%%" widget="many2many_tags"/>
			            </group>
			        </div>
		    	</div>
            </xpath>
        </field>
	</record>        
</odoo>  
