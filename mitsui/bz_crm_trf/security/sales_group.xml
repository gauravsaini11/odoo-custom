<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_new_sale_group">
        <field name="name">Additional Sales Group</field>
        <field name="description">Helps you manage your Sale Order.</field>
        <field name="sequence">51</field>
    </record>

    <record id="group_sales_pic_user" model="res.groups">
        <field name="name">Sales PIC</field>
        <field name="category_id" ref="module_category_new_sale_group"/>
    </record>

    <record id="group_sales_manager" model="res.groups">
        <field name="name">Sales Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_sales_pic_user'))]"/>
        <field name="category_id" ref="module_category_new_sale_group"/>
    </record>

    <record id="group_general_manager" model="res.groups">
        <field name="name">General Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_sales_manager'))]"/>
        <field name="category_id" ref="module_category_new_sale_group"/>
    </record>

    <record id="blanket_order_user_rule" model="ir.rule">
        <field name="name">User Blanket Orders</field>
        <field name="model_id" ref="bz_crm_trf.model_sale_order"/>
        <field name="domain_force">['|',('create_uid','=',False),('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_pic_user'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

    <record id="order_admin_rule" model="ir.rule">
        <field name="name">Admin Blanket Orders</field>
        <field name="model_id" ref="bz_crm_trf.model_sale_order"/>
        <field name="domain_force">['|',('create_uid','=',False),('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

    <record id="order_general_manager_rule" model="ir.rule">
        <field name="name">General Manager</field>
        <field name="model_id" ref="bz_crm_trf.model_sale_order"/>
        <field name="domain_force">['|',('create_uid','=',False),('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_general_manager'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

</odoo>