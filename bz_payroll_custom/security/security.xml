<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="bz_payroll_investment_declaration_management">
            <field name="name">Investment declaration</field>
            <field name="description">User access level for this module</field>
            <field name="sequence">3</field>
        </record>

        <record id="group_bz_investment_declaration_user" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="bz_payroll_custom.bz_payroll_investment_declaration_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the investment declaration application.</field>
        </record>

        <record id="group_investment_declaration_investment_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">the user will have an access to the investment declaration configuration.</field>
            <field name="category_id" ref="bz_payroll_custom.bz_payroll_investment_declaration_management"/>
            <field name="implied_ids" eval="[(4, ref('group_bz_investment_declaration_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="payroll_rule_personal_investment" model="ir.rule">
            <field name="name">Investment Declaration</field>
            <field ref="model_investment_declaration" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('bz_payroll_custom.group_bz_investment_declaration_user'))]"/>
        </record>

        <record id="rule_all_investment_declaration" model="ir.rule">
            <field name="name">All Investment Declaration</field>
            <field ref="model_investment_declaration" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('bz_payroll_custom.group_investment_declaration_investment_manager'))]"/>
        </record>

    </data>
</odoo>