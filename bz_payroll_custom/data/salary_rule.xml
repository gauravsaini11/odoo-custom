<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_rule_basic" model="hr.salary.rule">
            <field name="name">Unpaid Leave</field>
            <field name="sequence" eval="1"/>
            <field name="code">Unpaid</field>
            <field name="category_id" ref="om_hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].unpaid_leaves(contract, payslip, worked_days)</field>
        </record>

        <record id="om_hr_payroll.hr_rule_net" model="hr.salary.rule">
            <field name="name">Net Salary</field>
            <field name="sequence" eval="200"/>
            <field name="code">NET</field>
            <field name="category_id" ref="om_hr_payroll.NET"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].net_salary(contract, categories)</field>
            <field name="register_id" ref="om_hr_payroll.contrib_register_employees"/>
        </record>

        <record id="om_hr_payroll.hr_rule_taxable" model="hr.salary.rule">
            <field name="name">Gross</field>
            <field name="sequence" eval="100"/>
            <field name="code">GROSS</field>
            <field name="category_id" ref="om_hr_payroll.GROSS"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASIC + categories.ALW + contract.hra + contract.conveyance_allowance + contract.meal_allowance + contract.medical_allowance + contract.other_allowance</field>
        </record>

    </data>
</odoo>