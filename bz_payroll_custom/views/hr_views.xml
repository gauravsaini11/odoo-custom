<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_payroll_custom" model="ir.ui.view">
        <field name="name">hr.employee.leave.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_investment_declaration_view)d"
                    class="oe_stat_button"
                    icon="fa-credit-card"
                    type="action"
                    groups="base.group_user">
                    <span class="o_stat_text">
                        Investment
                    </span>
                </button>
            </xpath>
            <field name="coach_id" position="after">
                <field name="joining_date"/>
            </field>
            <field name="identification_id" position="after">
                <field name="unique_employee_id"/>
                <field name="aadhar"/>
                <field name="pan"/>
                <field name="mobile"/>
            </field>
            <xpath expr="//page[@name='hr_settings']/group/group[@name='identification_group']" position="after">
                <group string="Employee Account" name="employee_account">
                    <field name="pf_account"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>