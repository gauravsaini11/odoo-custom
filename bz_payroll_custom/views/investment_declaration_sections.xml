<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_investment_declaration_sections_tree" model="ir.ui.view">
            <field name="name">investment.declaration.sections.tree</field>
            <field name="model">investment.declaration.sections</field>
            <field name="arch" type="xml">
                <tree string="Investment Declaration Sections">
                    <field name="section"/>
                    <field name="max_limit"/>
                </tree>
            </field>
    </record>

    <record id="view_investment_declaration_sections_form" model="ir.ui.view">
            <field name="name">investment.declaration.sections.form</field>
            <field name="model">investment.declaration.sections</field>
            <field name="arch" type="xml">
              <form string="Investment Declaration Sections">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <h2><field name="section"/></h2>
                        </group>
                        <group>
                            <field name="max_limit"/>
                            <field name="code" invisible="1"/>
                        </group>
                    </group>
                    <field name="expense_line" widget="section_and_note_one2many">
                        <tree string="House Rent" editable="bottom">
                            <field name="expense"/>
                            <field name="description"/>
                        </tree>
                    </field>
                </sheet>
              </form>
            </field>
    </record>

    <record id="action_investment_declaration_sections_view" model="ir.actions.act_window">
        <field name="name">Investment Declaration Sections</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">investment.declaration.sections</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_investment_declaration_sections_view" action="action_investment_declaration_sections_view" parent="om_hr_payroll.menu_hr_payroll_configuration" name="Investment Declaration Sections" sequence="111"/>
</odoo>
