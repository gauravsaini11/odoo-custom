<odoo>
    <record id="view_project_project_form" model="ir.ui.view">
        <field name="name">view_project_project_testing_form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="sale_id" invisible="1"/>
                <field name="is_create_testing" invisible="1"/>
                <button name="create_testing" string='Create Testing'
                        class="oe_highlight" type="object"
                        attrs="{'invisible':['|',('sale_id','=',False),('is_create_testing','=',True)]}"/>
            </xpath>
             


        </field>
    </record>

    <record id="view_project_task_checklist_search" model="ir.ui.view">
        <field name="name">view_project.task.checklist.search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unassigned']" position="after">
                <field name="priority"/>
                <filter string="Very Low" name="0" domain="[('priority', '=', 'o')]"/>
                <filter string="Low" name="1" domain="[('priority', '=', '1')]"/>
                <filter string="Normal" name="2" domain="[('priority', '=', '2')]"/>
                <filter string="High" name="3" domain="[('priority', '=', '3')]"/>
            </xpath>

            <xpath expr="//group" position="inside">
                <filter string="Priority" name="priority" domain="[]" context="{'group_by': 'priority'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_task_checklist_tree" model="ir.ui.view">
        <field name="name">view_project.task.checklist.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="priority" widget="priority"/>
            </xpath>
        </field>
    </record>

