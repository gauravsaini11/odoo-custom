<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="purchase_requisition_indent_from" model="ir.ui.view">
			<field name="name">purchase.requisition.indent.form</field>
			<field name="model">purchase.requisition</field>
			<field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('oe_button_box')]" position="inside">
					<button class="oe_stat_button" type="object" name="get_indent" icon="fa-pencil-square-o" attrs="{'invisible': [('indent_count', '=', 0)]}">
						<field string="Indent" name="indent_count" widget="statinfo"/>
					</button>
				</xpath>
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="purchase_indent_ids" invisible="1" readonly="1"/>
				</xpath>
				<xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
					<field name="pi_number"/>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
