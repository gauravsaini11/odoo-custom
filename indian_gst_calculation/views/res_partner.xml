<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_partner_gst_number_add" model="ir.ui.view">
      <field name="name">res.partner.gst.number.add</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='property_account_position_id']" position="after">
          <field name="partner_gst_number" string="Customer GSTIN" /> 
        </xpath>

          <!-- GST NUMBER CONFIGURATIONS -->
         <xpath expr="//group[@name='misc']" position="after">
           <group name="gst_numbers" string="GST Numbers">
             <field name="gst_number_ids" nolabel="1">
               <tree editable="bottom">
                <!--<field name="sequence" widget="handle"/>-->
                 <field name="name" required="1"/>
                 <field name="from_date"/>
                 <field name="to_date"/>
               </tree>
             </field>
           </group>
         </xpath>

          <xpath expr="//field[@name='vat']" position="attributes">
              <attribute name="string">GST Number</attribute>
          </xpath>
          <xpath expr="//field[@name='vat']" position="attributes">
              <attribute name="readonly">1</attribute>
          </xpath>
      </field>
    </record>
  </data>
</odoo>