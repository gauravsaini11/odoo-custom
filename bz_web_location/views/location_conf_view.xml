<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create tree view -->
    <record id="view_location_conf_tree" model="ir.ui.view">
        <field name="name">location.conf.tree</field>
        <field name="model">location.conf</field>
        <field name="arch" type="xml">
            <tree expand="1">
                <field name="city"/>
                <field name="state_id"/>
                <field name="image" widget="image_popup" class="ot_image"/>
                <!--<field name="contact_person_Designation"/>
                <field name="contact_persons_phone_number"/>
                <field name="email"/>-->
            </tree>
        </field>
    </record>

    <!-- create form view -->
    <record id="view_location_conf_form_view" model="ir.ui.view">
        <field name="name">location.conf.form</field>
        <field name="model">location.conf</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder="State"
                                   options="{'no_open': True, 'no_quick_create': True}"/>
                            <field name="country_id" placeholder="Country" class="o_address_country"
                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="image" widget="image_popup" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

