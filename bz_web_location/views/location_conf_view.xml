    <!-- Acton Model -->
    <record id="action_location_conf" model="ir.actions.act_window">
        <field name="name">Location Conf</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">location.conf</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Location Conf From!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="location_conf"
              name="Location"
              parent="website.menu_website_global_configuration"
              action="action_location_conf"
              sequence="10"/>
