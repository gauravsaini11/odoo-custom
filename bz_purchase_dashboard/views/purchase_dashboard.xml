<odoo>
    <data>
        <record id="custom_purchase_dashboard_action" model="ir.actions.client">
            <field name="name">Dashboard</field>
            <field name="tag">purchase_dashboard_tag</field>
        </record>

        <menuitem id="menu_purchase_config_inherited" parent= "purchase.menu_purchase_root" sequence= "1" name= "Dashboard" action="custom_purchase_dashboard_action"/>

        <template id="assets_backend" name="account assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/bz_purchase_dashboard/static/src/js/dashboard.js"></script>
            <link rel="stylesheet" href="/bz_purchase_dashboard/static/src/css/dashboard.css"/>
        </xpath>
        </template>
    </data>
</odoo>