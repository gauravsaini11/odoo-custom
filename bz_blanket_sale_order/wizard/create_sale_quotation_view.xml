<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_sale_quotation_form" model="ir.ui.view">
        <field name="name">create.sale.quotation.form</field>
        <field name="model">create.sale.quotation</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="quotation_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="partner_id"/>
                                <field  name="tax_id"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                        optional="show"
                                    />
                                <field name="remaining_qty"/>
                                <field name="new_quotation_qty"/>
                            </tree>
                        </field>
                </group>
                <footer>
                    <button string="Create Quotation" name="blanket_quotation_create" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_sale_quotation_form" model="ir.actions.act_window">
            <field name="name">Create Sale Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.sale.quotation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>
