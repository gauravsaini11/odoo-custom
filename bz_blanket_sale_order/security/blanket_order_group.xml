<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_blanket_order">
        <field name="name">Blanket Order</field>
        <field name="description">Helps you manage your Blanket Order.</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_blanket_order_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_blanket_order"/>
    </record>

    <record id="group_blanket_order_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="implied_ids" eval="[(4, ref('group_blanket_order_user'))]"/>
        <field name="category_id" ref="module_category_blanket_order"/>
    </record>

    <record id="blanket_order_user_rule" model="ir.rule">
        <field name="name">User Blanket Orders</field>
        <field name="model_id" ref="bz_blanket_sale_order.model_so_blanket"/>
        <field name="domain_force">['|',('create_uid','=',False),('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_blanket_order_user'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

    <record id="blanket_order_admin_rule" model="ir.rule">
        <field name="name">Admin Blanket Orders</field>
        <field name="model_id" ref="bz_blanket_sale_order.model_so_blanket"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_blanket_order_admin'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
    </record>

</odoo>