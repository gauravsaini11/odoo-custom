<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_view_form" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"> </field>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='expected_revenue']" position="replace">
                </xpath>
                <xpath expr="//div[hasclass('o_row')]" position="replace"/>
                <!--<xpath expr="//div[hasclass('align-items-center')]" position="replace">
                </xpath>-->
                <xpath expr="//label[@for='probability']" position="replace">
                </xpath>
                <xpath expr="//button[@name='action_set_automated_probability']" position="replace">
                </xpath>
                <xpath expr="//small" position="replace">
                </xpath>
                <!--<xpath expr="//div[@id='probability']/field[@name='probability']" position="replace">
                    <field name="probability" widget="float" class="oe_inline" invisible="1"/>
                </xpath>-->
                <xpath expr="//div[@id='probability']" position="replace">
                    <field name="probability" widget="float" class="oe_inline" invisible="1"/>
                </xpath>
        </field>
        </record>
    </data>
</odoo>