<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
     <record id="view_student_form" model="ir.ui.view">
            <field name="name">college.student.form</field>
            <field name="model">college.student</field>
            <field name="arch" type="xml">
                <form>
                    <!-- State bar box -->
                    <header>
                        <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                                states="draft" confirm="Are you sure that you need to confirm ?" type="object"/>
                        <button id="button_done" name="action_done" string="Mark as Done" class="btn-primary"
                                states="confirm" confirm="Are you want to Mark as done ?" type="object"/>
                        <button id="button_draft" name="action_draft" string="Set to Draft" class="btn-primary"
                                states="cancel" confirm="Are you make it as a draft ?" type="object"/>
                        <button id="button_cancel" name="action_cancel" string="Cancel" states="draft,done,confirm"
                                confirm="Are you sure that you need to cancel ?" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>


    <record id="action_college_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">tree,kanban,form</field>
         <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Student!
            </p>
        </field>
    </record>

    <menuitem id="college_root"
              name="college"
              sequence="10"/>

    <menuitem id="college_student_root"
              name="Student"
              parent="college_root"
              sequence="10"/>

    <menuitem id="student"
              name="Student"
              parent="college_student_root"
              action="action_college_student"
              sequence="10"/>
</odoo>