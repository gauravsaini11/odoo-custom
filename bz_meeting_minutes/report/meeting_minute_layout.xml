<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_meeting_minute_pdf_layout">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center><h3>Office Meeting - Meeting Minutes</h3></center>
                        <table class="table table-sm table-bordered">
                            <tr>
                                <td>
                                    <strong>Meeting Date </strong>
                                </td>
                                <td>
                                    <span t-esc="o.start_date"/>
                                </td>
                                <td>
                                    <strong> Meeting Location </strong>
                                </td>
                                <td>
                                    <span t-esc="o.location"/>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <strong>Presenter </strong>
                                </td>
                                <td colspan="3">
                                    <span t-esc="o.presenter.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Meeting Called by </strong>
                                </td>
                                <td>
                                    <span t-esc="o.user_id.name"/>
                                </td>
                                <td>
                                    <strong>Facilitator</strong>
                                </td>
                                <td>
                                    <span t-esc="o.facilitator.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Note Taker </strong>
                                </td>
                                <td>
                                    <span t-esc="o.note_taker.name"/>
                                </td>
                                <td>
                                    <strong>Time Keeper</strong>
                                </td>
                                <td>
                                    <span t-esc="o.time_keeper.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <strong>Meeting Attendees </strong>
                                </td>
                            </tr>
                            <t t-foreach="o.partner_ids" t-as="partner">
                                <tr>
                                    <td colspan="4">
                                        <span t-esc="partner.name"/>
                                    </td>
                                </tr>
                            </t>
                        </table>

                        <table class="table table-sm table-bordered">
                            <tr>
                                <td colspan="4">
                                    <strong>Agenda Topic</strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <span t-esc="o.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <strong>Discussion</strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <span t-esc="o.description"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <strong>Action Item</strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <span t-esc="o.agenda_items"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <strong>Conclusion</strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <span t-esc="o.conclusion"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>